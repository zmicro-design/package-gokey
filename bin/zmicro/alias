#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro gokey <args ...>"
  echo ""

  gokey --help
}

version() {
  gokey version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    gokey "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
